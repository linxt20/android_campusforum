<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_circle"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <com.example.uidesign.utils.CircleImageView
            android:id="@+id/userhead"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:text="Username"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="30dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/followingShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape_tag"
                android:backgroundTint="#eeeeee"
                android:fontFamily="@font/calibri"
                android:text="following"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAllCaps="false"
                android:textColor="#555555"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/createat"
                android:text="time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/Tagshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape_tag"
            android:backgroundTint="@color/teal_200"
            android:fontFamily="@font/calibri"
            android:text="显示标签"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="false"
            android:textColor="#96ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/getdetailarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:drawableRight="@drawable/location"
            android:id="@+id/locationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="中国北京海淀区"
            android:textAlignment="textEnd"
            />
        <TextView
            android:id="@+id/titletext"
            android:text="title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/contenttext"
            android:text="content"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/imageView1"
            android:src="@drawable/rectangle_picture"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            
            android:layout_margin="2dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:src="@drawable/rectangle_picture"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            
            android:layout_margin="2dp"/>

        <ImageView
            android:id="@+id/imageView3"
            android:src="@drawable/rectangle_picture"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            
            android:layout_margin="2dp"/>

        <ImageView
            android:id="@+id/imageView4"
            android:src="@drawable/rectangle_picture"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            
            android:layout_margin="2dp"/>

        <ImageView
            android:id="@+id/imageView5"
            android:src="@drawable/rectangle_picture"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            
            android:layout_margin="2dp"/>

        <ImageView
            android:id="@+id/imageView6"
            android:src="@drawable/rectangle_picture"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            
            android:layout_margin="2dp"/>
    </GridLayout>

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_columnWeight="1"
            android:gravity="center">

            <ImageView
                android:src="@drawable/baseline_comment_24"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />

            <TextView
                android:id="@+id/comment"
                android:text="114"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_columnWeight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/likeimage"
                android:src="@drawable/baseline_favorite_border_24"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />

            <TextView
                android:id="@+id/liketext"
                android:text="114"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/star"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_columnWeight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/starimage"
                android:src="@drawable/baseline_star_border_24"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />

            <TextView
                android:id="@+id/startext"
                android:text="114"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>
    </GridLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>