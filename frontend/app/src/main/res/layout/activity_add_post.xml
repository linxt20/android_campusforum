<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_circle"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/touxiang"
                android:src="@drawable/ring_user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/man_1"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/yonghuming"
                    android:text="Username"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="30dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/shijian"
                    android:text="time"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/biaoti"
            android:hint="输入title"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/neirong"
            android:hint="输入content"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_circle"
            android:text="添加图片"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            >

            <ImageView
                android:id="@+id/imageV1"
                android:src="@drawable/rectangle_picture"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/man_1"
                android:layout_margin="2dp"/>

            <ImageView
                android:id="@+id/imageV2"
                android:src="@drawable/rectangle_picture"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/man_1"
                android:layout_margin="2dp"/>

            <ImageView
                android:id="@+id/imageV3"
                android:src="@drawable/rectangle_picture"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/man_1"
                android:layout_margin="2dp"/>

            <ImageView
                android:id="@+id/imageV4"
                android:src="@drawable/rectangle_picture"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/man_1"
                android:layout_margin="2dp"/>

            <ImageView
                android:id="@+id/imageV5"
                android:src="@drawable/rectangle_picture"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/man_1"
                android:layout_margin="2dp"/>

            <ImageView
                android:id="@+id/imageV6"
                android:src="@drawable/rectangle_picture"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/man_1"
                android:layout_margin="2dp"/>
        </GridLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/act_back"
        android:onClick="goback"
        android:background="@drawable/rectangle_circle"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/act_reset"
        android:onClick="reset"
        android:background="@drawable/rectangle_circle"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/act_push"
        android:onClick="push"
        android:background="@drawable/rectangle_circle"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
</LinearLayout>